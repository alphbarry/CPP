# SIMPLE ===================================================================================
NAME = Span 
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = ./src/
SRCS = Span.cpp main.cpp

# INCLUDES =================================================================================
INCLUDES_DIR = ./inc/
INCLUDES = -I$(INCLUDES_DIR)

# FLAGS ====================================================================================
FLAGS = -Wall -Wextra -Werror -std=c++98
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objects/
OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp
	@mkdir -p $(OBJS_DIR)
	@echo "Compiling: $<"
	@clang++ $(FLAGS) $(INCLUDES) -c $< -o $@

$(NAME): $(OBJS)
	@clang++ $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	@echo "Cleaning: $(OBJS_DIR)"
	@rm -rf $(OBJS_DIR)

fclean: clean
	@echo "Cleaning: $(NAME)"
	@rm -f $(NAME)

re: fclean all
# ==========================================================================================
